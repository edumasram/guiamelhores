<%= simple_form_for(@brewery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :site %>
    <%= f.input :country_id %>
    <%= f.input :brewerygroup_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
